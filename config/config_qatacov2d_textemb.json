{
    "name": "QaTaCOV_textft_64-5_AdamW_l0.1-S3-V2",
    "n_gpu": 1,

    "dataset": {
        "name": "QaTaCovTextEmb",
        "path": "/leonardo_work/IscrC_narc2/reports_project/QaTa-COV19/QaTa-COV19-v2_preprocessed_gt",
        "split_file": "/leonardo_work/IscrC_narc2/reports_project/QaTa-COV19/QaTa-COV19-v2_preprocessed_gt/qatacov_split3.xlsx",
        "text_emb_dir": "/leonardo_work/IscrC_narc2/reports_project/QaTa-COV19/Text_Embeddings/BioBERT/CLS",
        "batch_size": 64,
        "image_size": [224, 224],
        "transforms": "config/qatacov2d_transforms.json"
    },
    "pretrained_unet_path": "/leonardo_work/IscrC_narc2/reports_project/trained_models/QaTaCov2D/baseline_64-3_AdamW_S3/model_best.pth",
    "classes": {
        "0": "Background",
        "1": "Covid"
    },
    "model": {
        "name": "UNet2D",
        "in_channels": 1,
        "num_classes": 2,
        "size": 32,
        "depth": 5
    },
    "loss": {
        "name": "CombinedSegSigLoss",

        "seg_loss_name": "DiceCELoss",
        "seg_loss_kwargs": {
            "softmax": true,
            "include_background": true
        },

        "lambda_sig": 0.1,

        "sigloss_kwargs": {
            "learnable_temperature": true,
            "learnable_bias": true,
            "mask_type": "ignore_duplicates"
        }
    },

    "optimizer": {
        "name": "AdamW",
        "lr": 0.0003
    },
    "scheduler": {
        "name": "StepLR",
        "step_size": 10,
        "gamma": 0.9
    },
    "metrics": [
        {
            "key": "DSC",
            "name": "DiceMetric",
            "params": { "include_background": false},
            "train": true,
            "val": true,
            "test": true
        },
        {
            "key": "HD95",
            "name": "HausdorffDistanceMetric",
            "params": { "percentile": 95, "include_background": false},
            "train": false,
            "val": true,
            "test": true
        }
    ]
}
