{
    "name": "QaTaCOV_training",
    "n_gpu": 1,

    "dataset": {
        "name": "QaTaCOV",
        "path": "/work/tesi_ocarpentiero/brats3d/train_gli_norm",

        "batch_size": 2,
        "split_file": "/work/grana_neuro/Brain-Segmentation/split_files/BraTS23.json",
        "transforms": "/work/grana_neuro/Brain-Segmentation/config/brats2d_transforms.json"
    },
    "classes": {
        "0": "Background",
        "1": "Covid"
    },
    "model": {
        "name": "UNet2D",
        "in_channels": 1,
        "num_classes": 2,
        "size": 32,
        "depth": 5
    },
    "loss": {
        "name": "DiceCELoss"
    },
    "optimizer": {
        "name": "RAdam",
        "lr": 0.0003
    },
    "scheduler": {
        "name": "StepLR",
        "step_size": 10,
        "gamma": 0.9
    },
    "metrics": [
        {
            "key": "DSC",
            "name": "DiceMetric",
            "params": { "include_background": false },
            "train": true,
            "val": true,
            "test": true
        },
        {
            "key": "HD95",
            "name": "HausdorffDistanceMetric",
            "params": {"percentile": 95},
            "train": false,
            "val": true,
            "test": true
        }
    ]
}
